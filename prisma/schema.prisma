// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --- ENUM DIPERBARUI ---
enum Role {
  MAHASISWA
  ADMIN
  KAPRODI
}

enum Status {
  TERKIRIM
  DIPERIKSA_ADMIN
  DITOLAK_ADMIN
  DIPROSES_KAPRODI
  DISETUJUI
}

enum Jurusan {
  MATEMATIKA
  SISTEM_INFORMASI
}

// --- MODEL DIPERBARUI ---
model User {
  id        Int        @id @default(autoincrement())
  nama      String?
  email     String     @unique
  password  String
  role      Role
  jurusan   Jurusan

  mahasiswa Mahasiswa?

  @@map("user")
}

model Mahasiswa {
  id      Int     @id @default(autoincrement())
  id_user Int     @unique @map("id_user")
  nama    String
  nim     String  @unique
  jurusan Jurusan

  user  User    @relation(fields: [id_user], references: [id])
  judul Judul[]

  @@map("mahasiswa")
}

model Judul {
  id                 Int       @id @default(autoincrement())
  id_mahasiswa       Int       @map("id_mahasiswa")
  tanggal            DateTime  @default(now())
  jurusan            Jurusan
  topik              String
  judul              String    @db.Text
  status             Status    @default(TERKIRIM)
  catatan            String?   @db.Text
  transkrip          String?
  ukt                String?
  konsultasi         String?
  usulan_pembimbing1 String    @map("usulan_pembimbing1")
  usulan_pembimbing2 String    @map("usulan_pembimbing2")
  usulan_pembimbing3 String?   @map("usulan_pembimbing3")
  skPembimbing       String?   @map("sk_pembimbing")
  sk_tanggal         DateTime? @map("sk_tanggal")
  sk_number          String?   @map("sk_number")

  // --- Kolom Pembimbing dikembalikan menjadi String ---
  pembimbing1        String?   @map("pembimbing1")
  pembimbing2        String?   @map("pembimbing2")

  mahasiswa Mahasiswa @relation(fields: [id_mahasiswa], references: [id])

  proposal      Proposal?
  seminar_hasil SeminarHasil?

  @@map("judul")
}

// ===========================================
// ==== PERUBAHAN UTAMA ADA DI MODEL INI ====
// ===========================================
model Proposal {
  id               Int       @id @default(autoincrement())
  id_judul         Int       @unique @map("id_judul")
  tanggal          DateTime  @default(now())
  proposal         String    // Path ke file draft proposal
  persetujuan      String    // Path ke file persetujuan pembimbing
  status           Status
  jadwal_sidang    DateTime? @map("jadwal_sidang")
  sk_penguji       String?   @map("sk_penguji")
  undangan_penguji String?   @map("undangan_penguji")
  penguji          String?

  // --- KOLOM BARU DITAMBAHKAN DI SINI ---
  lampiran_5xseminar String?  // Path file bukti ikut seminar
  catatan     String?  // Catatan revisi dari admin 
  transkrip     String?   // Path file transkrip terbaru

  judul Judul @relation(fields: [id_judul], references: [id])

  @@map("proposal")
}
// ===========================================
// ====       AKHIR DARI PERUBAHAN          ====
// ===========================================

model SeminarHasil {
  id               Int       @id @default(autoincrement())
  id_judul         Int       @unique @map("id_judul")
  tanggal          DateTime  @default(now())
  bukti_sempro     String    @map("bukti_sempro")
  draf_skripsi     String    @map("draf_skripsi")
  bukti_konsultasi String    @map("bukti_konsultasi")
  sertifikat_toefl String    @map("sertifikat_toefl")
  bukti_hafalan    String    @map("bukti_hafalan")
  status           Status
  jadwal_sidang    DateTime? @map("jadwal_sidang")
  sk_penguji       String?   @map("sk_penguji")
  undangan_penguji String?   @map("undangan_penguji")

  // --- Kolom Penguji dikembalikan menjadi String ---
  penguji1         String?   @map("penguji1")
  penguji2         String?   @map("penguji2")

  judul Judul @relation(fields: [id_judul], references: [id])

  @@map("seminar_hasil")
}

// --- Model Dosen sekarang berdiri sendiri tanpa relasi balik ---
model Dosen {
  id      Int     @id @default(autoincrement())
  nama    String?
  nip     String  @unique
  jurusan Jurusan

  @@map("dosen")
}